<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog

        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="add average_mark to Film" author="koala">
        <addColumn tableName="film">
            <column name ="average_mark" type ="double" />
        </addColumn>
    </changeSet>

    <changeSet id="add portal_User_Mark to Comment" author="koala">
        <addColumn tableName="comment">
            <column name ="portal_User_Mark" type ="double" />
        </addColumn>
    </changeSet>

</databaseChangeLog>